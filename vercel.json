{
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.toolhexa.vercel.app"
        }
      ],
      "destination": "https://toolhexa.vercel.app/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/:path((?!sitemap.xml|robots.txt).*)*", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ]
}
