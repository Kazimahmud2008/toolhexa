
{
"rewrites": [
    { "source": "/:path((?!sitemap.xml|robots.txt).*)*", "destination": "/index.html" }
  ]
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.toolhexa.vercel.app"
        }
      ],
      "destination": "https://toolhexa.vercel.app/$1",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
